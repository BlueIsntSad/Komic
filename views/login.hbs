<div id="login">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    {{#if (eq title 'Admin Login | Komic')}}
                    <h3> Đăng nhập Admin</h3>
                    {{else}}
                    <h3> Đăng nhập</h3>
                    {{/if}}
                    {{>messages }}
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            {{#if (eq title 'Admin Login | Komic')}}
                            <input type="text" id="email" name="email" class="form-control" placeholder="abc@gmail.com">
                            {{else}}
                            <input type="email" id="email" name="email" class="form-control" placeholder="abc@gmail.com">
                            {{/if}}
                            
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" id="password" name="password" class="form-control" placeholder="password">
                        </div>
                        <div class="form-group">
                            <input type="submit" id= 'loginBtn' name ='loginBtn' value="Đăng nhập" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    {{#if (eq title 'Admin Login | Komic')}}
                        <div class="d-flex justify-content-center links">
                            Đăng ký admin mới?<a href="/register">Đăng ký</a>
                        </div>
                    {{else}}
                        <div class="d-flex justify-content-center links">
                            Chưa có tài khoản?<a href="/register">Đăng ký</a>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
