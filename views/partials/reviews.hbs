<div class="manga_review shadow-lg rounded p-4 mb-4">
    <div class="section-title m-3">
        <h5>Reviews</h5>
    </div>
    <div class="row p-3">
        {{#if comments}}
        {{#each comments}}
        <div class="review-item mb-3">
            <div class="avatar me-4"><img src={{byUser.avatar}}></div>
            <div class="comment p-4">
                <h6><strong>{{byUser.name}}</strong><span> - {{moment createdAt lang="vi" fromNow=null}}</span></h6>
                <p>{{content}}</p>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div id="no-comment">
            <h6 class="text-center">Chưa có bình luận nào</h6>
        </div>
        {{/if}}
    </div>
    {{#if comments}}
    <div class="review-showmore m-3">
        <div class="row">
            <div class="col-10 showmore"><a href="javascript:void(0)">Xem thêm bình luận</a></div>
            <div class="col-2 text-end"><span>12</span>/{{comments.length}}</div>
        </div>
    </div>
    {{/if}}
    <div class="manga_comment m-3">
        <div class="section-title">
            <h5>Bình luận của bạn</h5>
        </div>
        <form>
            <textarea class="form-control mb-3" placeholder="Viết bình luận"></textarea>
            <button type="submit" class="btn btn-dark"><i class="fas fa-paper-plane"></i> Comment</button>
        </form>
    </div>
</div>