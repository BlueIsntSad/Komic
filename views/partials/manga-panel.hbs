{{#each categories}}
        <div class="container manga_catetegory my-5 shadow-lg py-3 rounded">
            <div class="row category_item mb-4">
                <h4 class="col-lg-8 col-md-8 col-sm-12 section_title">
                    <a href="/categories/{{this._id}}">
                        {{this.name}}
                    </a>
                </h4>
                <h5 class="col-lg-4 col-md-4 col-sm-12 section_link">
                    <a href="/manga/categories/{{this._id}}">
                        view all
                    </a>
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </h5>
                <div class="col-lg-4 col-md-4 col-sm-12 section_sort">
                    <h5 class="section_sort_title">
                        Order by:
                    </h5>
                    <form action="/manga/categories/{{this._id}}" method="GET" id="submit_sort" class="section_sort_form">
                        <select name="sort" id="sort" class="section_sort_select">
                            <option value="namea_z" class="sort_select_option">A-Z</option>
                            <option value="must_views" class="sort_select_option must_views">Lượt xem  &#xf062;</option>
                            <option value="namez_a" class="sort_select_option">Z-A</option>
                            <option value="least_views" class="sort_select_option">Lượt xem  &#xf063;</option>
                        </select>
                    </form>
                </div>
                
            </div>
            <div class="row">
                {{#each this.products}}
                    <div class="col-lg-4 col-md-6 col-sm-6 col-6 mb-5 px-4">
                        <div class="manga_item">
                            <div class="manga_item_cover bg-cover shadow-lg rounded"  style="background-image: url({{this.cover}});">
                                <div class="text ep">{{this.finished}} / {{this.total}}</div>
                                <div class="text view">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    {{this.views}}
                                </div>
                                <div class="text comment">
                                        <i class="fa fa-comments" aria-hidden="true"></i>
                                    {{this.comments}}
                                </div>
                                <div class="manga_item_info">
                                    <a  class="manga_title" href="manga/{{this.id}}">
                                        <b>{{this.title}}</b>
                                    </a>
                                    <div class="manga_categories">
                                        {{#each this.categories}}
                                            <a href="manga/category/{{this._id}}" class="manga_category_item">
                                                {{this.name}}
                                            </a>
                                        {{/each}} 
                                    </div>
                                    <div class="manga_description">
                                        {{this.description}}
                                    </div>       
                                </div>
                            </div>
                            <div class="manga_item_text pt-1">
                                <h5 class="name">
                                    <a href="manga/{{this.id}}">
                                        {{this.title}}
                                    </a>
                                </h5>      
                            </div>
                        </div>
                    </div>
                {{/each}}   
            </div>                         
        </div>       
    {{/each}}