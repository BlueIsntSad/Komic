<div class="position-fixed end-0 p-3 toast-container" style="top: 80px;">
    <div class="toast {{#showToast toast.type}}{{/showToast}}" role="alert" aria-live="assertive" aria-atomic="true" id="toast-message">
        <div class="toast-header success {{toast.type}} ">
            <i class="far fa-check-circle"></i>
            <i class="far fa-question-circle"></i>
            <i class="far fa-exclamation-circle"></i>
            <i class="far fa-times-circle"></i>
        </div>
        <div class="toast-body">
            <h5 class="title"><strong>{{toast.title}}</strong> </h5>
            <p class="message">{{toast.message}}</p>
            
        </div>
        <div class="toast-footer">
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        
    </div>
</div>
<script src="/js/toast.js"></script>